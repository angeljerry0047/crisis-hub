<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" type="text/css" href="/static/css/design.css">
    <style>
        .form-group {

        }
        .container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container > div {
            box-shadow: 0px 0px 0.2em #ddd;
        }

        .submit-btn:disabled {
            pointer-events: none;
            background-color: #ddd;
        }
        .submit-btn:disabled:hover {
            background-color: #ddd;
        }

        .terms {
            display: flex;
            align-items: center;
        }

        input[type=checkbox] {
            width: auto;
            margin-right: 0.25em;
        }

        label {
            margin: 0 !important;
        }
    </style>
</head>
<body>
    <%- include('../partial/header') %>
    <div class="container my-2">
        <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">
            <h3>Create your account</h3>
            <%- include ('../partial/messages') %>
            <form action="" method="POST" id="register-form">
                <div class="mb-3">
                    <input type="text" name="username" id="username" placeholder="Username" required value="<%= username %>">
                </div>
                
                <div class="mb-3">
                    <input type="email" name="email" id="email" placeholder="Email" value="<%= email %>" required>
                </div>
                
                <div class="mb-3">
                    <input type="email" name="email2" id="email2" placeholder="Confirm email" value="<%= email2 %>" required>
                </div>
                
                <div class="mb-3">
                    <input type="text" name="country" id="country" placeholder="Country" value="<%= country %>" required>
                </div>
                
                
                <div class="mb-3">
                    <input type="password" name="password" id="password" placeholder="Password" value="<%= password %>" required>
                </div>
               
                <div class="mb-3">
                    <input type="password" name="password2" id="password2" placeholder="Confirm Password" value="<%= password2 %>" required>
                </div>
               

                <div class="terms d-flex my-1">
                    <input class="" type="checkbox" name="terms-checkbox" id="terms-checkbox">
                    <label class="label">I have read and accept the <a href="">terms and conditions</a></label>
                </div>

                <div class="form-group">
                    <button type="submit" name="register" id="register" class="submit-btn" disabled>Create Account</button>
                    <br>
                    <div>Already have an account ?<a href="/login" class="link">Sign In</a></div>
                </div>
                
            </form>
        </div>
    <div>
    <script>
        let termsCheckbox = document.getElementById('terms-checkbox');
        let submitButtom = document.getElementById('register');

        termsCheckbox.onclick = function(e) {
            let { checked } = e.target;
            if(checked) {
                console.log(checked);
                submitButtom.removeAttribute("disabled")
            } else {
                console.log("Not checked: ", checked);
                submitButtom.toggleAttribute("disabled");
            }
        }

        $('#register-form').on('submit', function(e) {
            if(termsCheckbox.checked) {

            }
        });

    </script>
</body>
</html>