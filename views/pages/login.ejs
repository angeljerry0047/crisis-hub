<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/static/css/design.css">
    <style>
        .container {
            height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container > div {
            box-shadow: 0px 0px 0.2em #ddd;
        }
        
        .form-group {
            align-items: center;
        }

        .form-footer {
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <%- include('../partial/header') %>
    <div class="container my-2">
        <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">

            <h3>Enter your details to login!</h3>
            <%- include ('../partial/messages') %>
            <form action="" method="POST" class="form-horizontal">
                <div class="form-group">
                    <input type="email" name="email" id="email" placeholder="Email" value="" required>
                </div>
            
                <div class="form-group">
                    <input type="password" name="password" id="password" placeholder="Password" value="" required >
                </div>

                <div class="form-group d-flex form-footer">
                    <button type="submit" class="btn btn-success">Login</button>
                    <a href="/forgot_password" class="link">Forgot Password ?</a>
                </div>
            
            </form>
        </div>
    <div>
</body>
</html>


